    <div class="masthead">
      <div class="content-wrapper">
        <div class="masthead__text">
        </div>
      </div>
    </div>
    <!-- END Masthead -->
    <div class="main__header">
      <div class="content-wrapper">
        <h1 class="beta">Register or Login</h1>
